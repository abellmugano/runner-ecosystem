{
  "version": "1.0.0",
  "last_updated": "2026-02-10",
  "policy_owner": "Runner Security Team",
  "compliance_standards": ["NIST SP 800-53", "ISO 27001", "CIS Benchmarks"],
  "access_control": {
    "principle_of_least_privilege": true,
    "role_based_access_control": true,
    "password_policy": {
      "minimum_length": 12,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_special_characters": true,
      "password_expiration_days": 90,
      "lockout_threshold": 5,
      "lockout_duration_minutes": 30
    },
    "privileged_access": {
      "admin_accounts": 2,
      "service_accounts": 5,
      "require_multi_factor_authentication": true,
      "privileged_session_timeout_minutes": 15
    }
  },
  "network_security": {
    "firewall_enabled": true,
    "allowed_ports": [22, 80, 443, 8080, 3306],
    "blocked_ports": [23, 135, 139, 445, 3389],
    "vpn_required": true,
    "network_segmentation": true,
    "intrusion_detection_enabled": true
  },
  "data_security": {
    "encryption_at_rest": true,
    "encryption_in_transit": true,
    "data_classification": ["public", "internal", "confidential", "restricted"],
    "data_retention_policy": {
      "public": "7 years",
      "internal": "3 years",
      "confidential": "1 year",
      "restricted": "6 months"
    },
    "backup_policy": {
      "frequency": "daily",
      "retention_days": 30,
      "offsite_backup": true,
      "backup_encryption": true
    }
  },
  "application_security": {
    "input_validation": true,
    "output_encoding": true,
    "authentication_mechanism": "OAuth 2.0",
    "authorization_mechanism": "RBAC with ABAC",
    "security_testing": {
      "static_code_analysis": true,
      "dynamic_analysis": true,
      "dependency_scanning": true,
      "penetration_testing": true,
      "vulnerability_scanning": true
    },
    "logging_security": {
      "audit_logging": true,
      "sensitive_data_masking": true,
      "log_retention_days": 365,
      "log_integrity_checks": true
    }
  },
  "incident_response": {
    "incident_response_plan": true,
    "incident_detection_time_minutes": 15,
    "incident_response_time_minutes": 30,
    "incident_resolution_time_hours": 24,
    "communication_plan": true,
    "post_incident_review": true
  },
  "compliance_monitoring": {
    "continuous_monitoring": true,
    "compliance_audits": true,
    "penetration_testing_frequency": "quarterly",
    "vulnerability_assessment_frequency": "monthly",
    "security_training_frequency": "quarterly"
  },
  "third_party_risk": {
    "vendor_assessment": true,
    "contractual_security_requirements": true,
    "continuous_monitoring_of_vendors": true,
    "incident_notification_to_vendors": true
  },
  "physical_security": {
    "access_control_to_data_centers": true,
    "environmental_monitoring": true,
    "hardware_inventory": true,
    "asset_disposal_policy": true
  },
  "security_training": {
    "security_awareness_training": true,
    "role_specific_training": true,
    "phishing_simulation": true,
    "training_completion_rate": 95,
    "training_frequency": "annual"
  },
  "monitoring_and_logging": {
    "security_information_event_management": true,
    "real_time_monitoring": true,
    "log_correlation": true,
    "automated_response": true,
    "compliance_reporting": true
  },
  "vulnerability_management": {
    "vulnerability_scanning": true,
    "patch_management": true,
    "vulnerability_assessment": true,
    "risk_assessment": true,
    "remediation_timeframes": {
      "critical": "7 days",
      "high": "14 days",
      "medium": "30 days",
      "low": "90 days"
    }
  },
  "business_continuity": {
    "business_impact_analysis": true,
    "recovery_time_objectives": {
      "rto": "4 hours",
      "rpo": "1 hour"
    },
    "disaster_recovery_plan": true,
    "backup_recovery_testing": true,
    "alternate_site_availability": true
  }
}