{
  "environments": {
    "test": {
      "path": "../../runner-deployments/test",
      "validations": {
        "require_tests": false,
        "allowed_status": ["built", "tested"]
      }
    },
    "staging": {
      "path": "../../runner-deployments/staging",
      "validations": {
        "require_approval": false,
        "allowed_status": ["staged"]
      }
    },
    "production": {
      "path": "../../runner-deployments/production",
      "validations": {
        "require_approval": true,
        "allowed_status": ["approved"]
      }
    }
  },
  "default_environment": "test"
}
